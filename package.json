{
  "name": "cicd",
  "version": "1.0.0",
  "description": "Learning CI/CD with Trunk-Based Development, Quality Gates, and Testing",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "audit": "npm audit --audit-level=high",
    "test:e2e": "playwright test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ishfaqkhan80/cicd.git"
  },
  "keywords": [
    "ci-cd",
    "trunk-based-development",
    "quality-gates",
    "testing"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ishfaqkhan80/cicd/issues"
  },
  "homepage": "https://github.com/ishfaqkhan80/cicd#readme",
  "dependencies": {
    "better-sqlite3": "^12.5.0",
    "express": "^5.2.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.6",
    "@types/node": "^20.10.5",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.39.2",
    "supertest": "^7.1.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.50.1",
    "vitest": "^3.2.4"
  }
}
